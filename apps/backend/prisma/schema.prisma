generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Placeholder model for testing Prisma setup
// Full schema will be implemented in later stories
model HealthCheck {
  id        String   @id @default(uuid())
  status    String
  timestamp DateTime @default(now())

  @@map("health_checks")
}
