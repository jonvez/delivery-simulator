# Backend Production Environment Variables
# Copy this file to .env and fill in the values

# ===========================================
# REQUIRED VARIABLES
# ===========================================

# Node environment
NODE_ENV=production

# Server port (Railway will override with PORT env var)
PORT=3001

# Database connection string (from Railway PostgreSQL service)
# Format: postgresql://postgres:[PASSWORD]@[HOST]:[PORT]/railway
DATABASE_URL=

# CORS origin (your Vercel frontend URL)
# Example: https://delivery-simulator.vercel.app
CORS_ORIGIN=

# ===========================================
# OPTIONAL VARIABLES
# ===========================================

# Logging level (debug, info, warn, error)
LOG_LEVEL=info
